{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/config/monitoring.config.ts",
    "src/types/monitoring.ts",
    "src/services/discord.service.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
} 